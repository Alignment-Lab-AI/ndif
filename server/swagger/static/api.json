          }
        },
        "responses": {
          "200": {
            "description": "hello in the requested language",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status":{
                      "type":"string"
                    },
                    "jon_id": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }

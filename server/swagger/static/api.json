{
  "openapi": "3.0.3",
  "info": {
    "title": "NDIF API",
    "description": "An API for free and open access to large language models",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://nagoya.research.khoury.northeastern.edu"
    }
  ],
  "paths": {
    "/request_submit": {
      "post": {
        "summary": "Submits job for processing",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Request"
              }
            }
          },
          "required": false
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Result"
                }
              }
            }
          }
        },
        "deprecated": false
      }
    },
    "/request_result/{id}": {
      "get": {
        "summary": "Retrieves job status/results",
        "parameters": [
          {
            "name": "job_id",
            "in": "path",
            "description": "Job ID",
            "required": true,
            "deprecated": false,
            "allowEmptyValue": false,
            "explode": false,
            "allowReserved": false,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Result"
                }
              }
            }
          }
        },
        "deprecated": false
      }
    }
  },
  "components": {
    "schemas": {
      "ActivationRequest": {
        "title": "ActivationRequest",
        "required": [
          "intervention"
        ],
        "type": "object",
        "properties": {
          "final_output": {
            "title": "Final Output",
            "type": "boolean",
            "default": true
          },
          "layers": {
            "title": "Layers",
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "intervention": {
            "title": "Intervention",
            "type": "null"
          }
        }
      },
      "Request": {
        "title": "Request",
        "required": [
          "prompt"
        ],
        "type": "object",
        "properties": {
          "job_id": {
            "title": "Job Id",
            "type": "string"
          },
          "prompt": {
            "title": "Prompt",
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            ]
          },
          "max_new_tokens": {
            "title": "Max New Tokens",
            "type": "integer",
            "default": 1
          },
          "get_answers": {
            "title": "Get Answers",
            "type": "boolean",
            "default": false
          },
          "top_k": {
            "title": "Top K",
            "type": "integer",
            "default": 1
          },
          "generate_greedy": {
            "title": "Generate Greedy",
            "type": "boolean",
            "default": true
          },
          "activation_requests": {
            "title": "Activation Requests",
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ActivationRequest"
            }
          }
        }
      },
      "JobStatus": {
        "title": "JobStatus",
        "enum": [
          "RECIEVED",
          "APPROVED",
          "SUBMITTED",
          "COMPLETED",
          "ERROR"
        ],
        "description": "An enumeration."
      },
      "Candidate": {
        "title": "Candidate",
        "required": [
          "token",
          "token_id",
          "p"
        ],
        "type": "object",
        "properties": {
          "token": {
            "title": "Token",
            "type": "string"
          },
          "token_id": {
            "title": "Token Id",
            "type": "integer"
          },
          "p": {
            "title": "P",
            "type": "number"
          }
        }
      },
      "Answer": {
        "title": "Answer",
        "required": [
          "top_token",
          "candidates"
        ],
        "type": "object",
        "properties": {
          "top_token": {
            "title": "Top Token",
            "type": "string"
          },
          "candidates": {
            "title": "Candidates",
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Candidate"
            }
          }
        }
      },
      "Data": {
        "title": "Data",
        "required": [
          "generated_text",
          "answer",
          "generated_tokens"
        ],
        "type": "object",
        "properties": {
          "generated_text": {
            "title": "Generated Text",
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "answer": {
            "title": "Answer",
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Answer"
            }
          },
          "input_tokenized": {
            "title": "Input Tokenized",
            "type": "array",
            "items": {}
          },
          "generated_tokens": {
            "title": "Generated Tokens",
            "type": "array",
            "items": {}
          },
          "activations": {
            "title": "Activations",
            "type": "object",
            "additionalProperties": {
              "type": "array",
              "items": {
                "type": "array",
                "items": {
                  "type": "array",
                  "items": {
                    "type": "number"
                  }
                }
              }
            }
          }
        }
      },
      "Result": {
        "title": "Result",
        "required": [
          "job_id",
          "status",
          "description"
        ],
        "type": "object",
        "properties": {
          "job_id": {
            "title": "Job Id",
            "type": "string"
          },
          "status": {
            "$ref": "#/components/schemas/JobStatus"
          },
          "timestamp": {
            "title": "Timestamp",
            "type": "string",
            "format": "date-time"
          },
          "description": {
            "title": "Description",
            "type": "string"
          },
          "data": {
            "title": "Data",
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Data"
            }
          }
        }
      }
    }
  }
}